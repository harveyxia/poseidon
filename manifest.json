{
  "name": "Poseidon",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Tracks and analyzes your web surf.",
  "homepage_url": "http://harveyxia.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Poseidon"
  },
  "permissions": [
    "alarms",
    "storage",
    "tabs",
    "*://*/*"
  ]
}